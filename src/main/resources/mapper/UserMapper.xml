<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.iscas.workingdiary.mapper.UserMapper">

    <resultMap id="user" type="User">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_sex" property="userSex"/>
        <result column="project_team" property="projectTeam"/>
        <result column="user_position" property="userPosition"/>
        <result column="cert_no" property="certNo"/>
        <result column="role_id" property="roleId"/>
    </resultMap>


    <update id="updateUser" parameterType="User">
        update t_user
        <set>
            <if test="userName != null">user_name=#{userName},</if>
            <if test="userSex != null">user_sex=#{userSex},</if>
            <if test="projectTeam != null">project_team=#{projectTeam},</if>
            <if test="userPosition != null">user_position=#{userPosition},</if>
            <if test="leader != null">leader=#{leader},</if>
            <if test="roleId != null">role_id=#{roleId},</if>
            <if test="password != null">password=#{password}</if>
        </set>
        WHERE
            <if test="userId != null">user_id=#{userId}</if>
    </update>


    <select id="userLogin" resultMap="user">
        SELECT*
        FROM t_user
        <where>
            <if test="userName != null and userName != ''">
                user_name=#{userName}
            </if>
            <if test="password != null and password != ''">
                and password=#{password}
            </if>
        </where>
    </select>

    <insert id="insertUser" parameterType="User">
        INSERT INTO t_user
            (user_id, user_name, user_sex, project_team, user_position, leader, role_id, password,cert_no)
        VALUES
            (#{userId}, #{userName}, #{userSex}, #{projectTeam}, #{userPosition}, #{leader}, #{roleId}, #{password}, #{certNo})
    </insert>
    
    <delete id="deleteUser" parameterType="java.lang.Integer">
        DELETE FROM t_user
        <where>
            <if test="userId != null and userId != ''">user_id = #{userId}</if>
        </where>
    </delete>

    <select id="validate" parameterType="User" resultType="User">
        SELECT*
        FROM t_user
        <where>
            <if test="userId != null and userId != ''">
                user_id=#{userId}
            </if>
            <if test="userName != null and userName != '' ">
                or user_name=#{userName}
            </if>
        </where>
    </select>

    <select id="selectOne" parameterType="User" resultMap="user">
        SELECT*
        FROM t_user
        <where>
            <if test="userName != null and userName != '' ">
                and user_name=#{userName}
            </if>
            <if test="userId != null and userId != '' ">
                and user_id=#{userId}
            </if>
        </where>
    </select>
</mapper>
